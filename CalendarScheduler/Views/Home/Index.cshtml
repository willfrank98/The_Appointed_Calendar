@{
    ViewData["Title"] = "Home Page";

}

<div class="container-fluid" id="calendar"></div>

<div id="addModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Appointment</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="addForm">
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <input type="text" id="addTitle" name="Title" class="form-control" placeholder="Title" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Location</label>
                        <select id="addLocation" class="form-control" asp-items="ViewBag.Locations"></select>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Category</label>
                        <select id="addCategory" class="form-control" asp-items="ViewBag.Categories"></select>
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" id="addDescription" name="Description" placeholder="Description"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="starttime">Start Time</label>
                        <input type="datetime-local" name="StartTime" id="starttime" value="2019-12-03T12:00:00" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="endtime">End Time</label>
                        <input type="datetime-local" name="EndTime" id="endtime" value="2019-12-04T12:00:00" class="form-control" />
                    </div>
                    <label>Recurrence</label>
                    <div class="custom-control custom-radio custom-control-inline">
                        <input type="radio" id="radio1" name="Recurrence" class="custom-control-input">
                        <label class="custom-control-label" for="radio1">Daily</label>
                    </div>
                    <div class="custom-control custom-radio custom-control-inline">
                        <input type="radio" id="radio2" name="Recurrence" class="custom-control-input">
                        <label class="custom-control-label" for="radio2">Weekly</label>
                    </div>
                    <div class="custom-control custom-radio custom-control-inline">
                        <input type="radio" id="radio3" name="Recurrence" class="custom-control-input">
                        <label class="custom-control-label" for="radio3">Monthly</label>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button id="add-form-submit" type="submit" class="btn btn-primary" data-dismiss="modal">Save</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

<div id="viewModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <dl>
                    <dt>Description</dt>
                    <dd id="event-desc"></dd>
                    <dt>Location</dt>
                    <dd id="event-loc"></dd>
                    <dt>Time</dt>
                    <dd id="event-time"></dd>
                    <dt>Category</dt>
                    <dd id="event-cat"></dd>
                </dl>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-warning">Edit</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-contextmenu/2.7.1/jquery.contextMenu.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-contextmenu/2.7.1/jquery.contextMenu.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-contextmenu/2.7.1/jquery.ui.position.js"></script>
    <script src="~/js/callendar.js" asp-append-version="true"></script>
    <script type="text/javascript">

        $(document).ready(function () {


            $("#add-form-submit").on('click', function () {
                //TODO handle form submit and validation
            })

            $("input[type='datetime-local']").flatpickr({
                enableTime: true,
                dateFormat: "m/d/Y h:i K",
                defaultDate: new Date("2019-12-03T12:00:00")
            });
        });
    </script>
}